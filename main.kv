<PageLayout>:
    name:"pagelayout"
    border: '10dp'
    
    BoxLayout: 
        orientation: 'vertical'
        AsyncImage: 
            source: r'E:\Projeler\Duygu Analizi - Naive Bayes\Kodlar\rsz_amazonnn.jpg'
            
        TextInput:
            id: address
            hint_text: 'Ürün Adresini Yazınız...'
            size_hint: (1,.1)
            multiline: False
            padding: 10
            on_text: app.process() 
            
        Button: 
            text: 'Analiz'
            size_hint: (1,.15)
            on_release: app.Tahmin()
        Button:
            text: 'Temizle'
            size_hint: (1,.1)
            on_release: app.Temizle()

    BoxLayout: 
        canvas: 
            Color: 
                rgba: 255 / 255., 161 / 255., 2 / 255., 1
            Rectangle: 
                pos: self.pos 
                size: self.size
        
        orientation: 'vertical'
            
        Label: 
            text: 'Yapay Zeka ile Amazon Ürün Analizi v.0.1\n\nTüm Hakkı Saklıdır © 2021'
            font_size: 11
